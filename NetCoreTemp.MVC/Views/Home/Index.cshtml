@using Microsoft.AspNetCore.Mvc.Localization
@using NetCoreTemp.MVC.Models.Home
@model Test
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Home Page"];
}

<h2>@ViewData["Title"].</h2>

<div class="text-center">
    <h1 class="display-4">@Localizer["Welcome"]</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">@Localizer["building Web apps with ASP.NET Core"]</a>.</p>
    <form asp-controller="Home" asp-action="Index" method="post" class="form-horizontal" role="form">
        <h4>@Localizer["Create a new test."]</h4>
        <hr>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="a" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="a" class="form-control">
                <span asp-validation-for="a" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="b" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="b" class="form-control">
                <span asp-validation-for="b" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="c" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="c" class="form-control">
                <span asp-validation-for="c" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-default">@Localizer["Register"]</button>
            </div>
        </div>
    </form>
</div>
